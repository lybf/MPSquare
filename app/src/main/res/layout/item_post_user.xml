<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<RelativeLayout
		android:layout_height="match_parent"
		android:layout_width="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="8dp">

		<net.lybf.chat.widget.CircleImageView
			android:layout_height="50dp"
			android:layout_width="50dp"
			android:src="@drawable/ic_launcher"
			android:id="@+id/comment_header"
			android:layout_margin="10dp"/>

		<TextView
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:layout_width="match_parent"
			android:id="@+id/comment_name"
			android:text="null"
			android:textSize="18sp"
			android:textColor="#104BF4"
			android:layout_toRightOf="@id/comment_header"/>

		<TextView
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:layout_width="match_parent"
			android:layout_gravity="bottom|right"
			android:id="@+id/comment_time"
			android:text="1970-01-01 00:00:00"
			android:layout_marginTop="5dp"
			android:textSize="16sp"
			android:layout_below="@id/comment_name"
			android:layout_toRightOf="@id/comment_header"/>

		<TextView
			android:layout_height="match_parent"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:layout_width="match_parent"
			android:autoLink="web|email"
			android:id="@+id/comment_content"
			android:textIsSelectable="true"
			android:layout_marginTop="10dp"
			android:textSize="18sp"
			android:text="null"
			android:layout_below="@id/comment_header"/>

	</RelativeLayout>

</android.support.v7.widget.CardView>
