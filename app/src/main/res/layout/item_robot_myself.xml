<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	app:cardCornerRadius="2dp"
	app:cardMaxElevation="2dp"
	app:cardElevation="2dp"
	app:cardPreventCornerOverlap="true"
	app:cardUseCompatPadding="true"
	android:layout_margin="1dp">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical">

		<RelativeLayout
			android:layout_height="wrap_content"
			android:layout_width="wrap_content">

			<net.lybf.chat.widget.CircleImageView
				android:layout_gravity="center"
				android:layout_width="35dp"
				android:src="@drawable/ic_launcher"
				android:layout_height="35dp"
				android:id="@+id/item_robot_myself_header"
				android:layout_alignParentRight="true"
				android:layout_margin="5dp"/>

			<RelativeLayout
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:layout_toLeftOf="@id/item_robot_myself_header"
				android:layout_marginRight="10dp"
				android:layout_marginLeft="10dp"
				android:layout_marginTop="10dp">

				<TextView
					android:layout_height="wrap_content"
					android:textAppearance="?android:attr/textAppearanceSmall"
					android:layout_width="wrap_content"
					android:id="@+id/item_robot_myself_name"
					android:gravity="right"
					android:layout_alignParentRight="true"/>

				<TextView
					android:layout_height="wrap_content"
					android:textAppearance="?android:attr/textAppearanceMedium"
					android:layout_width="wrap_content"
					android:layout_below="@id/item_robot_myself_name"
					android:layout_toLeftOf="@id/item_robot_myself_header"
					android:layout_marginRight="5dp"
					android:layout_marginLeft="5dp"
					android:id="@+id/item_robot_myself_content"
					android:layout_marginTop="5dp"
					android:layout_alignParentRight="true"/>

			</RelativeLayout>

		</RelativeLayout>

	</LinearLayout>

</android.support.v7.widget.CardView>

