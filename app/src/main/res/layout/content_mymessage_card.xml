<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/card_holder"
	style="@style/Card"
	android:layout_margin="10dp"
	android:layout_width="match_parent"
	android:layout_height="wrap_content">

	<FrameLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="center">

		<ImageView
			android:id="@+id/user_cover"
			style="@style/Cover"/>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical"
			android:paddingBottom="10dp"
			android:paddingLeft="3dp"
			android:paddingRight="3dp">

			<net.lybf.chat.widget.CircleImageView
				android:id="@+id/user_header"
				android:layout_width="@dimen/profile_picture_size"
				android:layout_height="@dimen/profile_picture_size"
				android:layout_gravity="center_horizontal"
				android:scaleType="centerCrop"
				android:src="@drawable/ic_account_circle"/>

			<TextView
				android:id="@+id/user_name"
				style="@style/Name"
				android:paddingTop="10dp"
				android:text="Full Name"/>

			<TextView
				android:id="@+id/user_sub_title"
				style="@style/SubTitle"
				android:text="Just a sub title"/>

			<TextView
				android:id="@+id/user_describe"
				style="@style/Brief"
				android:layout_margin="5dp"
				android:text="@string/user_describe"/>

			<RelativeLayout
				android:layout_height="wrap_content"
				android:layout_width="match_parent">

				<ImageView
					android:layout_height="wrap_content"
					android:textAppearance="?android:attr/textAppearanceMedium"
					android:layout_width="wrap_content"
					android:text="@string/email"
					android:src="@drawable/ic_email"
					android:id="@+id/user_emailIcon"/>

				<TextView
					android:layout_height="wrap_content"
					android:textAppearance="?android:attr/textAppearanceMedium"
					android:layout_width="match_parent"
					android:layout_toRightOf="@id/user_emailIcon"
					android:layout_centerInParent="true"
					android:id="@+id/user_email"
					android:layout_marginRight="40dp"
					android:layout_marginLeft="10dp"/>

				<CheckBox
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:layout_alignParentRight="true"
					android:id="@+id/user_emailVerify"/>

			</RelativeLayout>

		</LinearLayout>

	</FrameLayout>

</android.support.v7.widget.CardView>

