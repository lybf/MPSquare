<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	app:cardCornerRadius="2dp"
	app:cardMaxElevation="2dp"
	app:cardElevation="2dp"
	app:cardPreventCornerOverlap="true"
	app:cardUseCompatPadding="true"
	android:layout_margin="1dp">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical">

		<RelativeLayout
			android:layout_height="match_parent"
			android:layout_width="match_parent">

			<net.lybf.chat.widget.CircleImageView
				android:layout_width="35dp"
				android:src="@drawable/ic_launcher"
				android:layout_height="35dp"
				android:id="@+id/item_robot_robot_header"
				android:layout_margin="5dp"/>

			<RelativeLayout
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:layout_toRightOf="@id/item_robot_robot_header"
				android:layout_marginLeft="10dp"
				android:layout_marginRight="10dp"
				android:layout_marginTop="10dp">

				<TextView
					android:layout_height="wrap_content"
					android:textAppearance="?android:attr/textAppearanceSmall"
					android:layout_width="wrap_content"
					android:id="@+id/item_robot_robot_name"/>

				<TextView
					android:layout_height="wrap_content"
					android:textAppearance="?android:attr/textAppearanceMedium"
					android:layout_width="wrap_content"
					android:layout_below="@id/item_robot_robot_name"
					android:layout_toRightOf="@id/item_robot_robot_header"
					android:layout_marginLeft="5dp"
					android:layout_marginRight="5dp"
					android:id="@+id/item_robot_robot_content"
					android:layout_marginTop="5dp"/>

			</RelativeLayout>

		</RelativeLayout>

	</LinearLayout>

</android.support.v7.widget.CardView>

