<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="wrap_content"
	android:layout_width="wrap_content"
	android:orientation="vertical">

	<android.support.v7.widget.CardView
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<RelativeLayout
			android:layout_height="match_parent"
			android:layout_width="match_parent"
			android:layout_marginLeft="16dp"
			android:layout_marginTop="16dp"
			android:layout_marginRight="8dp">

			<net.lybf.chat.widget.CircleImageView
				android:layout_height="40dp"
				android:layout_width="40dp"
				android:id="@+id/comment_header"
				android:src="@drawable/ic_launcher"
				android:layout_margin="10dp"/>

			<TextView
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:layout_width="wrap_content"
				android:id="@+id/comment_name"
				android:text="null"
				android:textColor="#104BF4"
				android:textSize="18sp"
				android:layout_toRightOf="@id/comment_header"/>

			<TextView
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:layout_width="match_parent"
				android:id="@+id/comment_time"
				android:layout_marginTop="5dp"
				android:text="1970-01-01 0:00:00"
				android:textSize="16sp"
				android:layout_below="@id/comment_name"
				android:layout_toRightOf="@id/comment_header"/>

			<TextView
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:layout_width="match_parent"
				android:id="@+id/comment_content"
				android:autoLink="web"
				android:textIsSelectable="true"
				android:layout_marginTop="10dp"
				android:textSize="18sp"
				android:text="null"
				android:layout_below="@id/comment_time"
                android:layout_toRightOf="@id/comment_header"/>

			<View
				android:layout_height="1dp"
				android:layout_width="match_parent"/>

		</RelativeLayout>

	</android.support.v7.widget.CardView>

	<View
		android:background="?android:attr/dividerVertical"
		android:layout_height="1dp"
		android:layout_width="match_parent"/>

</LinearLayout>

