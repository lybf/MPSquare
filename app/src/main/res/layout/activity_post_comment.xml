<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="match_parent"
	android:layout_width="match_parent"
	android:orientation="vertical"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools">

	<android.support.design.widget.AppBarLayout
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:theme="@style/AppTheme.AppBarOverlay"
		app:popupTheme="@style/AppTheme.PopupOverlay"
		android:clipToPadding="true">

		<android.support.v7.widget.Toolbar
			android:id="@+id/toolbar_comment"
			android:layout_width="match_parent"
			android:layout_height="?attr/actionBarSize"
			android:theme="@style/AppTheme.AppBarOverlay"
			app:popupTheme="@style/AppTheme.PopupOverlay"/>

	</android.support.design.widget.AppBarLayout>

	<RelativeLayout
		android:layout_height="wrap_content"
		android:layout_width="wrap_content">

		<include
			app:layout_behavior="@string/appbar_scrolling_view_behavior"
			layout="@layout/content_post_content"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_alignParentTop="true"
			android:layout_marginBottom="50dp"
			android:id="@+id/activity_post_comment_include"/>

		<android.support.v7.widget.CardView
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:orientation="horizontal"
			android:minHeight="50dp"
			android:layout_alignParentBottom="true"
			android:id="@+id/activitypostcommentCardView1">

			<EditText
				android:layout_height="wrap_content"
				android:layout_width="match_parent"
				android:ems="10"
				android:maxHeight="100dp"
				android:layout_marginLeft="10dp"
				android:layout_marginTop="4dp"
				android:layout_marginBottom="4dp"
				android:hint="发表评论"
				android:id="@+id/activity_post_comment_edittext"
				android:layout_marginRight="80dp"
				android:background="#55595959"
				android:layout_alignParentBottom="true"
				android:minHeight="50dp"
				android:height="50dp"/>

			<Button
				android:layout_height="50dp"
				android:layout_width="50dp"
				android:text="发送"
				android:layout_marginRight="10dp"
				android:id="@+id/activity_post_comment_send"
				android:layout_alignParentRight="true"
				android:layout_gravity="bottom|right"
				android:layout_alignParentBottom="true"/>

		</android.support.v7.widget.CardView>

	</RelativeLayout>

</LinearLayout>

