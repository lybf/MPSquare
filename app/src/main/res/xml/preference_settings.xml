<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:title="外观">
        <CheckBoxPreference
            android:title="随机登录背景"
            android:key="CheckBox_RandomBackground"
            android:summary="勾选此项将开启登录界面随机背景"
            android:defaultValue="false"/>
		<CheckBoxPreference
            android:title="夜间模式"
            android:key="CheckBox_DarkTheme"
            android:summary="勾选后开启夜间模式"
            android:defaultValue="false"/>
    </PreferenceCategory>

    <PreferenceCategory
        android:title="其他">
        <PreferenceScreen
            android:title="作者:lybf"
            android:key="pref_about"
            android:summary="轻按添加作者QQ">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="http://qm.qq.com/cgi-bin/qm/qr?k=TX3ow25Z9LRp3wRV-kp1EX4AB2HzYEPC"/>
        </PreferenceScreen>
        <EditTextPreference
            android:title="导出数据路径"
            android:key="EditText_outputpath"
            android:summary="设置导出路径"
            android:defaultValue="/sdcard/lybf/MPSquare/.data/"/>

        <PreferenceScreen
            android:title="导出数据"
            android:key="outputdata"
            android:summary="按下导出,需设置路径"/>

        <EditTextPreference
            android:title="导入数据路径"
            android:key="EditText_inputpath"
            android:summary="设置导入路径"
            android:defaultValue="/sdcard/lybf/MPSquare/.data/"/>

        <PreferenceScreen
            android:title="导入数据"
            android:key="inputdata"
            android:summary="按下导入,需设置路径"/>
    </PreferenceCategory>
</PreferenceScreen>

